{
  "$schema": "https://opencode.ai/config.json",
  "plugin": [
    "opencode-gemini-auth@latest"
  ],
  "provider": {
    "google": {
      "options": {
        "projectId": "easypost-platform"
      }
    },
    "google-vertex-anthropic": {}
  },
  "compaction": {
    "auto": true,
    "prune": true,
    "reserved": 20000
  },
  "tui": {
    "scroll_acceleration": {
      "enabled": true
    }
  },
  "keybinds": {
    "leader": "ctrl+space",
    "messages_half_page_up": "ctrl+u",
    "messages_half_page_down": "ctrl+d",
    "messages_page_up": "ctrl+b,pageup",
    "messages_page_down": "ctrl+f,pagedown",
    "messages_first": "home",
    "messages_last": "end",
    "input_delete_to_line_start": "none",
    "input_line_home": "alt+a,home",
    "input_line_end": "alt+e,end",
    "input_delete": "delete",
    "app_exit": "ctrl+c,<leader>q",
    "input_word_forward": "alt+f,alt+right,ctrl+right",
    "input_word_backward": "alt+b,alt+left,ctrl+left",
    "input_delete_word_backward": "ctrl+w,ctrl+backspace,alt+backspace",
    "editor_open": "<leader>e",
    "theme_list": "<leader>t",
    "sidebar_toggle": "<leader>b",
    "status_view": "<leader>s",
    "session_export": "<leader>x",
    "session_new": "<leader>n",
    "session_list": "<leader>l",
    "session_timeline": "<leader>g",
    "session_compact": "<leader>c",
    "session_child_cycle": "<leader>right",
    "session_child_cycle_reverse": "<leader>left",
    "session_parent": "<leader>up",
    "messages_copy": "<leader>y",
    "messages_undo": "<leader>u",
    "messages_redo": "<leader>r",
    "messages_toggle_conceal": "<leader>h",
    "model_list": "<leader>m",
    "agent_list": "<leader>a",
    "tips_toggle": "<leader>h"
  },
  "agent": {
    "build": {
      "mode": "primary",
      "tools": {
        "todowrite": true,
        "todoread": true,
        "question": true
      },
      "prompt": "{file:~/.claude/agents/prompts/continuous-phased.md}"
    },
    "plan": {
      "mode": "primary",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "todowrite": true,
        "todoread": true
      },
      "prompt": "{file:~/.claude/agents/prompts/plan-mode.md}"
    },
    "general": {
      "mode": "subagent",
      "tools": {
        "todowrite": true,
        "todoread": true
      },
      "prompt": "{file:~/.claude/agents/prompts/continuous-phased.md}"
    },
    "explore": {
      "mode": "subagent",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "todowrite": true,
        "todoread": true
      },
      "prompt": "{file:~/.claude/agents/prompts/continuous-phased.md}\n\nYou are in read-only exploration mode. Use todos to track multi-step searches and codebase discovery tasks."
    },
    "human-writer": {
      "description": "Executive-level writing with radical brevity and zero AI tells. Specializes in clear, concise, human-readable writing for all document types.",
      "mode": "primary",
      "temperature": 0.3,
      "prompt": "{file:~/.claude/agents/human-writer.md}",
      "tools": {
        "todowrite": true,
        "todoread": true
      }
    },
    "document-summarizer": {
      "description": "Analyze and condense documents. Extract key points, action items, and insights from long content.",
      "mode": "subagent",
      "prompt": "{file:~/.claude/agents/document-summarizer.md}",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "todowrite": true,
        "todoread": true
      }
    },
    "follower": {
      "description": "Executes delegated pipeline phases for the team-leader command. Applies layered reasoning and continuous phased execution.",
      "mode": "subagent",
      "prompt": "{file:~/.claude/agents/follower.md}",
      "tools": {
        "todowrite": true,
        "todoread": true
      }
    },
    "orchestrator": {
      "description": "Coordinates complex multi-phase projects by delegating to specialized subagents. Use for work with multiple independent workstreams or complex dependency chains.",
      "mode": "subagent",
      "tools": {
        "todowrite": true,
        "todoread": true,
        "question": true
      },
      "permission": {
        "task": {
          "*": "allow",
          "orchestrator": "deny",
          "compaction": "deny",
          "title": "deny",
          "summary": "deny"
        }
      },
      "prompt": "{file:~/.claude/agents/orchestrator.md}"
    }
  },
  "permission": {
    "skill": {
      "*": "allow"
    },
    "external_directory": {
      "/tmp/**": "allow",
      "/private/tmp/**": "allow",
      "/var/folders/**": "allow",
      "/Users/joshlane/.claude/plans/**": "allow"
    },
    "read": {
      "/tmp/*": "allow",
      "/private/tmp/*": "allow",
      "/var/folders/*": "allow",
      "/Users/joshlane/.claude/plans/*": "allow"
    },
    "write": "allow",
    "bash": {
      "rm -rf /": "deny",
      "rm -rf / *": "deny",
      "sudo rm *": "deny",
      "sudo dd *": "deny",
      "mkfs *": "deny",
      "fdisk *": "deny",
      "parted *": "deny",
      "wipefs *": "deny"
    },
    "edit": "allow"
  },
  "mcp": {
    "gspace": {
      "type": "local",
      "command": [
        "gspace",
        "mcp",
        "stdio"
      ],
      "enabled": true
    },
    "pkm": {
      "type": "local",
      "command": [
        "pkm",
        "mcp"
      ],
      "enabled": true,
      "environment": {
        "WORKSPACE_KNOWLEDGE_DB_PATH": "$HOME/workspace/lancedb",
        "WORKSPACE_KNOWLEDGE_ROOT": "$HOME/workspace",
        "PKM_DB_PATH": "$HOME/workspace/lancedb",
        "PKM_ROOT": "$HOME/workspace"
      }
    },
    "bigquery": {
      "type": "local",
      "command": [
        "bigquery",
        "mcp",
        "stdio"
      ],
      "enabled": true
    },
    "jira": {
      "type": "local",
      "command": [
        "jira",
        "mcp",
        "stdio"
      ],
      "enabled": false
    },
    "sequential-thinking": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "enabled": true
    },
    "phab": {
      "type": "local",
      "command": [
        "phab",
        "mcp",
        "stdio"
      ],
      "enabled": false
    },
    "time": {
      "type": "local",
      "command": [
        "uvx",
        "mcp-server-time"
      ],
      "enabled": false
    },
    "memory": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-memory"
      ],
      "enabled": true,
      "environment": {
        "MEMORY_FILE_PATH": "/Users/joshane/memory.json"
      }
    }
  }
}
