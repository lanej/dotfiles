# Rust/Cargo disk space management
alias cargo-clean-all='find ~/src -name "target" -type d -prune -exec echo "Cleaning: {}" \; -exec rm -rf {} \;'
alias cargo-clean-debug='find ~/src -name "target" -type d -exec sh -c "[ -d \"{}/debug\" ] && echo \"Cleaning debug in: {}\" && rm -rf \"{}/debug\"" \;'
alias cargo-clean-old='fd --type d --max-depth 2 "^target$" ~/src --exec cargo-sweep -t 30 {//}'
alias cargo-cache-clean='command -v cargo-cache >/dev/null && cargo cache --autoclean || echo "Install cargo-cache: cargo install cargo-cache"'
alias rust-disk='du -sh ~/src/*/target 2>/dev/null | sort -hr | head -20'
alias sccache-stats='sccache --show-stats'
alias cargo-install-ssh='CARGO_NET_GIT_FETCH_WITH_CLI=true cargo install --git'
cargo-install-github() {
	if [ $# -lt 2 ]; then
		echo "Usage: cargo-install-github <org> <repo> [cargo-install-args...]"
		return 1
	fi
	local org="$1"
	local repo="$2"
	shift 2
	CARGO_NET_GIT_FETCH_WITH_CLI=true cargo install --git "ssh://git@github.com/$org/$repo" "$@"
}
