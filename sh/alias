# Override glow to always use nord style
glow() {
	command glow --style ~/.config/glow/nord.json "$@"
}

# https://github.com/bcspragu/kagi/pull/2
kagi() {
	command kagi "$@" | glow -p -w "$(stty size | awk '{ print $2 }' | xargs -I {} bc --expression='{}-10')"
}

gh-clone() {
	local selected
	local initial_query="${1:-}"

	# Helper function for searching
	_do_search() {
		local query="$1"
		if [ -z "$query" ]; then
			echo "Type a query and press CTRL-R to search"
			return
		fi
		gh search repos "$query" --limit 100 --json fullName 2>/dev/null | jq -rc ".[] | .fullName"
	}

	# Initial search if query provided
	local initial_results
	if [ -n "$initial_query" ]; then
		initial_results=$(_do_search "$initial_query")
	else
		initial_results="Type a query and press CTRL-R to search"
	fi

	selected=$(echo "$initial_results" | \
		fzf --ansi \
		--reverse \
		--multi \
		--prompt="GitHub repo> " \
		--header=$'CTRL-R: Search | Wildcards: * | Qualifiers: repo: user: org: language: topic: in:name,description,readme\nâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€' \
		--bind='ctrl-r:change-prompt(ðŸ” Searching {q}...> )+reload([ -n {q} ] && gh search repos {q} --limit 100 --json fullName 2>/dev/null | jq -rc ".[] | .fullName" || echo "Type a query and press CTRL-R to search")+clear-query+change-prompt(GitHub repo> )' \
		--preview='gh repo view {} 2>/dev/null | COLORTERM=truecolor CLICOLOR_FORCE=1 glow --style ~/.config/glow/nord.json || echo "Loading preview..."' \
		--preview-window="right:60%")

	if [ -n "$selected" ]; then
		echo "$selected" | while read -r line; do
			if [[ "$line" == *"/"* ]] && [[ "$line" != *"Type a query"* ]]; then
				echo "ðŸ“¥ Cloning $line..."
				gh repo clone "$line" ~/src/"$(basename "$line")"
			fi
		done
	fi
}

phab-clone() {
	local selected
	selected=$(phab repository search --output jsonl 2>&1 |
		grep -v "^Error:" |
		jq -r 'select(.fields != null) | .fields.shortName' |
		fzf --height=100% --reverse -m \
			--preview 'readme=$(phab file get -r {} README.md 2>/dev/null || phab file get -r {} readme.md 2>/dev/null); if [ -n "$readme" ]; then if command -v glow >/dev/null 2>&1; then echo "$readme" | COLORTERM=truecolor CLICOLOR_FORCE=1 glow --style ~/.config/glow/nord.json -; elif command -v bat >/dev/null 2>&1; then echo "$readme" | bat --style=plain --language=markdown --color=always -; else echo "$readme"; fi; else echo "No README found"; fi' \
			--preview-window 'right:60%:wrap')

	if [ -z "$selected" ]; then
		return 0
	fi

	echo "$selected" | while IFS= read -r repo; do
		local clone_uri
		clone_uri=$(phab repository uri "$repo")

		local clone_dir="${HOME}/src/${repo}"
		echo "Cloning $repo from $clone_uri to $clone_dir..."
		git clone "$clone_uri" "$clone_dir"
	done
}

