# msmtp configuration for sending email via Gmail SMTP

# Set default values for all accounts
defaults
auth           on
tls            on
tls_trust_file /etc/ssl/cert.pem
logfile        ~/.local/share/msmtp/msmtp.log

# Gmail account
account        gmail
host           smtp.gmail.com
port           587
from           joshlane@easypost.com
user           joshlane@easypost.com

# Password options (choose one):
# Option 1: Use macOS Keychain (recommended for macOS)
passwordeval   "security find-generic-password -s msmtp-gmail -a joshlane@easypost.com -w"

# Option 2: Use pass (Linux/Unix password manager)
# passwordeval   "pass email/gmail"

# Option 3: Use gpg-encrypted password file
# passwordeval   "gpg --quiet --for-your-eyes-only --no-tty --decrypt ~/.password-gmail.gpg"

# Set default account
account default : gmail
