#!/bin/bash
# SSH status display for tmux status bar
# Shows an indicator when tmux is running on a remote host (accessed via SSH)

# Check if we're in an SSH session by looking for SSH environment variables
if [ -n "$SSH_CONNECTION" ] || [ -n "$SSH_CLIENT" ] || [ -n "$SSH_TTY" ]; then
  echo "#[fg=cyan,bg=brightblack] üîê SSH "
fi
